-content_for :page_header do
  Create Ticket
-content_for :sub_header do
  New ticket page
-content_for :current_page_breadcrumb do
  %i.fa.fa-dashboard
    =link_to new_ticket_path do
      New ticket
-content_for :dashboard_nav do
  active
.col-sm-7
  .panel.panel-primary
    .panel-heading
      %h3.panel-title Create ticket
    .panel-body
      .col-lg-12
        =form_for @ticket, method: :put, role: "form" do |f|
          =render partial: "ticket_form", locals:{f:f}
          .form-group
            =f.submit "Update", class: "btn btn-default"
.col-sm-5
  .panel.panel-success
    .panel-heading
      %h3.panel-title Info
    .panel-body
      .col-lg-12
